print ('Items: Apples, Bananas, Sandwhich, Popsicle')
selection=raw_input('Select First Item\s: ')
if selection=='apple':
    a = 2.5
    while True:
        selection=raw_input('How Many Apples (limit 3): ')
        if selection=='1':
            p = a
            print '<1 Apple added to Cart>'
            break
        elif selection=='2':
            p = a*2
            print '<2 Apples added too Cart>'
            break
        elif selection=='3':
            p = a*3
            print '<3 Apples added too Cart>'
            break
        else:
            print '[try again]'
            continue
elif selection=='banana':
    b = 3
    while True:
        selection=raw_input('How Many Bananas (limit 3): ')
        if selection=='1':
            p = b
            print '<1 Banana added to Cart>'
            break
        elif selection=='2':
            p = b*2
            print '<2 Bananas added too Cart>'
            break
        elif selection=='3':
            p = b*3
            print '<3 Bananas added too Cart>'
            break
        else:
            print '[try again]'
            continue
elif selection=='sandwhich':
    s = 5
    while True:
        selection=raw_input('How Many Sandwhiches (limit 3): ')
        if selection=='1':
            p = s
            print '<1 Sandwhich added to Cart>'
            break
        elif selection=='2':
